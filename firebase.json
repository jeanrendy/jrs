{
  "hosting": {
    "public": "out", // Crucial: Next.js static files live here
    "cleanUrls": true, // Removes .html from your URLs
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html" // Handles client-side routing
      }
    ]
  }
}